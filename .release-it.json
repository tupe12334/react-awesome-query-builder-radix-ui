{
  "git": {
    "commitMessage": "chore(release): bump version to ${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": ["pnpm lint", "pnpm build"]
  }
}
